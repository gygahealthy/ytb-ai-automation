{
  "name": "veo3-automation",
  "version": "1.0.0",
  "description": "Electron app for VEO3 profile automation",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm run copy:sql && concurrently \"npm run dev:vite\" \"npm run dev:electron:watch\" \"npm run dev:electron:run\"",
    "dev:vite": "vite",
    "dev:electron:watch": "tsc -p tsconfig.electron.json --watch",
    "dev:electron:run": "wait-on http://localhost:5173 dist/main/main.js && cross-env NODE_ENV=development electron .",
    "copy:sql": "node ./scripts/copy-sql/copy-sql.js",
    "copy:assets": "node ./scripts/copy-assets/copy-assets.js",
    "copy:manifests": "node ./scripts/copy-manifests/copy-manifests.js",
    "prebuild:electron": "npm run copy:sql",
    "postbuild": "npm run copy:assets",
    "build": "tsc && vite build && npm run copy:manifests && npm run copy:assets",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "npm run build && npm run build:electron && electron-builder",
    "package:win": "pwsh -ExecutionPolicy Bypass -File .\\scripts\\build\\build-windows.ps1",
    "package:mac": "npm run build && npm run build:electron && electron-builder --mac",
    "package:mac:universal": "npm run build && npm run build:electron && electron-builder --mac --universal",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "sync:media-gen-ids": "node ./scripts/sync-db/sync-media-generation-ids.js"
  },
  "keywords": [
    "electron",
    "veo3",
    "automation",
    "puppeteer"
  ],
  "author": "VEO3 Team",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.22",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/sqlite3": "^3.1.11",
    "@types/user-agents": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "^4.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@types/react-syntax-highlighter": "^15.5.13",
    "clsx": "^2.0.0",
    "got": "^14.6.0",
    "lucide-react": "^0.294.0",
    "puppeteer": "^21.6.1",
    "puppeteer-core": "^21.6.1",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.7",
    "react-router-dom": "^7.9.3",
    "react-syntax-highlighter": "^15.6.6",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^3.0.1",
    "sqlite3": "^5.1.7",
    "tough-cookie": "^6.0.0",
    "tsconfig-paths": "^4.2.0",
    "undici": "^6.22.0",
    "user-agents": "^1.1.667",
    "uuid": "^13.0.0",
    "zustand": "^4.4.7"
  },
  "optionalDependencies": {
    "node-window-manager": "^1.4.0"
  },
  "build": {
    "appId": "com.veo3.automation",
    "productName": "VEO3 Automation",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "node_modules/sqlite3/**/*",
      "node_modules/puppeteer*/**/*",
      "node_modules/@puppeteer/**/*"
    ],
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "win": {
      "icon": "src/renderer/assets/icon-512.png",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "src/renderer/assets/icon-512.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "minimumSystemVersion": "11.0",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "type": "distribution"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "linux": {
      "icon": "src/renderer/assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
